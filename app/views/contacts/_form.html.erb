<%= form_for @contact do |c| %>
    <div class='form_item'>
    <%= c.label :first_name %>
    <%= c.text_field :first_name %>
    </div>

    <div class='form_item'>
    <%= c.label :surname %>
    <%= c.text_field :surname %>
    </div>

    <div class='form_item'>
    <%= c.label :email %>
    <%= c.email_field :email %>
    </div>

    <div class='form_item'>
    <%= c.label :location %>
    <%= c.password_field :location %>
    </div>

    <div class='form_item'>
    <%= c.label :birthday %>
    <%= c.date_field :birthday %>
    </div>

    <div class='form_item'>
    <%= c.label :gender %>
    <%= c.text_field :gender %>
    </div>

    <div class='form_item'>
      <%= c.submit %>
    </div>

<% end %>
